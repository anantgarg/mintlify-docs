{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "linden",
  "name": "CometChat",
  "colors": {
    "primary": "#6851d6",
    "light": "#6851d6",
    "dark": "#6851d6"
  },
  "background": {
    "color": {
      "dark": "#0a0915"
    },
    "decoration": "gradient"
  },
  "appearance": {
    "default": "dark"
  },
  "fonts": {
    "heading": {
      "family": "Satoshi",
      "source": "https://www.cometchat.com/_static/fonts/Satoshi-Variable.woff2",
      "format": "woff2"
    },
    "body": {
      "family": "Satoshi",
      "source": "https://www.cometchat.com/_static/fonts/Satoshi-Variable.woff2",
      "format": "woff2"
    }
  },
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "pages": ["index"]
      },
      {
        "tab": "Platform",
        "hidden": true,
        "dropdowns": [
          {
            "dropdown": "Chat",
            "icon": "comment",
            "groups": [
              {
                "group": " ",
                "pages": [
                  "docs/fundamentals/overview",
                  {
                    "group": "Features",
                    "pages": [
                      "docs/fundamentals/features-core",
                      {
                        "group": "AI User Copilot",
                        "pages": [
                          "docs/fundamentals/ai-user-copilot/overview",
                          "docs/fundamentals/ai-user-copilot/conversation-starter"
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "dropdown": "Calling",
            "icon": "phone-volume",
            "groups": [
              {
                "group": "Extend",
                "pages": [
                  {
                    "group": "Notifications",
                    "pages": ["docs/notifications/logs"]
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "Integrate",
        "dropdowns": [
          {
            "dropdown": "React",
            "icon": "react",
            "versions": [
              {
                "version": "v2",
                "pages": [
                    {
                      "group": "Theming",
                      "pages": [
                        "docs/ui-kit/react/theme/color-resources"
                        
                      ]
                    },
                    "docs/changelog/angular"
                  ]
              },
              {
                "version": "v1",
                "pages": [
                  "docs/ui-kit/react/sound-manager"
                ]
              }
            ]
          },
          {
            "dropdown": "React Native",
            "icon": "react",
            "pages": ["docs/ui-kit/react-native/overview"]
          },
          {
            "dropdown": "Angular",
            "icon": "angular",
            "pages": ["docs/ui-kit/angular/overview"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "openapi.json"
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Help Center",
          "href": "https://help.cometchat.com/hc/en-us",
          "icon": "circle-question"
        },
        {
          "anchor": "Community",
          "href": "https://community.cometchat.com/",
          "icon": "users"
        },
        {
          "anchor": "Blog",
          "href": "https://www.cometchat.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://www.cometchat.com/"
  },
  "navbar": {
    "links": [
      {
        "label": "Log in",
        "href": "https://app.cometchat.com/login"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Schedule a demo",
      "href": "https://www.cometchat.com/contact-sales?ref=topnav"
    }
  },
  "footer": {
    "socials": {
      "linkedin": "https://www.linkedin.com/company/cometchat/",
      "youtube": "https://www.youtube.com/c/CometChat",
      "x": "https://twitter.com/CometChat",
      "github": "https://www.github.com/cometchat"
    }
  }
}
